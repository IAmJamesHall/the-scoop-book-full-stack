extends ../layout

block content
    .subheader
        h2 Login
    if err
        h4.login-error= err
    form(action="/auth/login", method="post")
        div
            label(for="username") Username:
            input(type="text", name="username")
        div
            label(for="password") Password:
            input(type="password", name="password")
        input(type="submit")

